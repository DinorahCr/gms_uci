<%= form_for @event, remote: true, html:{ class: "form-horizontal"} do |f| %>


<ul class = "errors"> </ul>
<button class="close" data-dismiss="modal" aria-hidden = "true">&times;</button> 
<span class="help-block">
 <%= f.text_field :title, :class =>"form-control", :placeholder => "Event Title"%>
</span>

<div class = "modal-body">
 <%= f.text_area :body, :class => "form-control", :rows => "3" %>
</div> 

<div class = "modal-footer">
 <%= submit_tag "Save", class: "form_submit" , :class => "btn btn-default", data:{ disable_with: 'Submitting...' }%>
</div>


<% end %>

