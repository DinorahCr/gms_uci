<%= form_for @member, html:{ class: "form-horizontal"}, remote: true do |f| %>

<ul class = "errors"> </ul>
<button class="close" data-dismiss="modal" aria-hidden = "true">&times;</button> 
<span class="help-block">
 <div class="col-xm-6">
 <%= f.text_field :name, :class =>"form-control input-sm", :placeholder => "Name"%>
 </div>
 <%= f.file_field :image, accept: 'image/png, image/gif, image/jpeg' %>
</span>
 
<div class = "modal-body">
 <%= f.text_area :body, :class => "form-control", :rows => "3" , :placeholder => "Description" %>
</div> 

<div class = "modal-footer">
 <%= submit_tag "Save", class: "form_submit" , :class => "btn btn-default", data:{ disable_with: 'Submitting...' }%>
</div>
  
  
<% end %>
